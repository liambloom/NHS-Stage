<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.liambloom.nhs.inductionStage.gui.RootController"
            prefHeight="400.0" prefWidth="600.0" fx:id="rootPane">
    <bottom>
        <BorderPane minHeight="70" id="bottom-bar" fx:id="bottomBar">
            <center>
                <HBox id="instructions-container" fillHeight="false">
                    <Label fx:id="instructions" wrapText="true" />
                </HBox>
            </center>
            <right>
                <HBox id="buttons-container" fillHeight="false">
                    <Button text="Prev" onAction="#prev" />
                    <Button text="Next" onAction="#next" fx:id="next" />
                </HBox>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
